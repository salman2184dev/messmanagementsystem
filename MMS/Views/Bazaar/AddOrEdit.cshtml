@model MMS.Models.SetupModels.Bazaar
@{
    ViewBag.Title = "AddOrEdit";
    Layout = null;
}
@using (Html.BeginForm("AddOrEdit", "Bazaar", FormMethod.Post, new { enctype = "multipart/form-data", onSubmit = "return jQueryAjaxPost(this);", data_restUrl = Url.Action("AddOrEdit", "Bazaar", new { id = 0 }) }))//data-reset
{
    @Html.AntiForgeryToken()
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-info">
                    <div class="box-header">
                        <h3 class="box-title">
                            Designation
                        </h3>
                        <hr />
                        <div class="form-horizontal">
                            @Html.ValidationSummary(true)
                            @Html.HiddenFor(model => model.BazaarId)

                            @Html.HiddenFor(model => model.CreatedDate)
                            @Html.HiddenFor(model => model.CreatedBy)


                            <div class="form-group">
                                @Html.LabelFor(model => model.MemberId, "Member Name", new { @class = "control-label col-md-4" })
                                <div class="col-md-8">
                                    @if (Model.BazaarId >0)
                                    {
                                        @Html.DropDownListFor(model => model.MemberId, new SelectList(Model.MemberList, "MemberId", "MemberName", Model.MemberId),"Select", htmlAttributes: new {@class = "form-control"})
                                    }
                                    else
                                    {
                                        @Html.DropDownListFor(model => model.MemberId, new SelectList(Model.MemberList, "MemberId", "MemberName"), "Select", htmlAttributes: new {@class = "form-control"})
                                    }

                                    @Html.ValidationMessageFor(model => model.MemberId)
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.BazaarDate, "Date", new { @class = "control-label col-md-4" })
                                <div class="col-md-8">
                                    @Html.EditorFor(model => model.BazaarDate, new { htmlAttributes = new { @class = "form-control datepicker", id = "BazaarDate" } })
                                    @Html.ValidationMessageFor(model => model.BazaarDate)
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Amount, "Amount", new { @class = "control-label col-md-4" })
                                <div class="col-md-8">
                                    @Html.EditorFor(model => model.Amount, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Amount)
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Remarks, new { @class = "control-label col-md-4" })
                                <div class="col-md-8">
                                    @Html.EditorFor(model => model.Remarks, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Remarks)
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.IsActive, "Is Active", new { @class = "control-label col-md-4" })
                                <div class="col-md-8">
                                    @Html.CheckBoxFor(model => model.IsActive, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.IsActive)
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-4 col-md-8">
                                    <input type="submit" value="Submit" class="btn btn-success" />
                                    @if (Model.BazaarId != 0)
            {
                        <a class="btn btn-default" onclick="refreshAddNewTab('@Url.Action("AddOrEdit", "Bazaar", new {id = 0})', false)"><i class="fa fa-plus"></i> Add New</a>
}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}